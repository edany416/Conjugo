<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="16dp"
    tools:context="com.z3dd.conjugo.AddVerbActivity">

    <TextView
        android:id="@+id/current_verb_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:paddingLeft="100dp"
        android:text="Verb Name"
        />
    <TextView
        android:id="@+id/definition_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/current_verb_text_view"
        android:paddingLeft="100dp"
        android:paddingTop="20dp"
        android:text="Definition"
        />
    <TextView
        android:id="@+id/yo_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/definition_text_view"
        android:text="Yo"
        android:paddingTop="50dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        />
    <TextView
        android:id="@+id/tu_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/yo_text_view"
        android:text="Tu"
        android:paddingTop="75dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        />
    <TextView
        android:id="@+id/el_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/tu_text_view"
        android:text="El"
        android:paddingTop="75dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        />
    <TextView
        android:id="@+id/nos_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@id/definition_text_view"
        android:text="Nos"
        android:paddingTop="50dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        />
    <TextView
        android:id="@+id/vos_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@id/nos_text_view"
        android:text="Vos"
        android:paddingTop="75dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        />
    <TextView
        android:id="@+id/ellos_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@id/vos_text_view"
        android:text="Ellos"
        android:paddingTop="75dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        />
    <EditText
        android:id="@+id/verb_name_edit_text"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/current_verb_text_view"
        android:layout_toRightOf="@id/current_verb_text_view"
        />
    <EditText
        android:id="@+id/definition_edit_text"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/definition_text_view"
        android:layout_toRightOf="@id/definition_text_view"
        />
    <EditText
        android:id="@+id/yo_edit_text"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/yo_text_view"
        android:layout_toRightOf="@+id/yo_text_view"
        />
    <EditText
        android:id="@+id/tu_edit_text"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tu_text_view"
        android:layout_toRightOf="@+id/tu_text_view"
        />
    <EditText
        android:id="@+id/el_edit_text"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/el_text_view"
        android:layout_toRightOf="@+id/el_text_view"
        />
    <EditText
        android:id="@+id/nos_edit_text"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/nos_text_view"
        android:layout_toRightOf="@+id/nos_text_view"
        />
    <EditText
        android:id="@+id/vos_edit_text"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/vos_text_view"
        android:layout_toRightOf="@+id/vos_text_view"
        />

    <EditText
        android:id="@+id/ellos_edit_text"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ellos_text_view"
        android:layout_toRightOf="@+id/ellos_text_view"
        />
    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:onClick="onClickDone"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:text="Temp Done"
        android:layout_marginBottom="75dp"
        />


</RelativeLayout>
