    package="com.z3dd.conjugo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label=""
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".AddVerbActivity"
            android:label="Add Verb"
            android:parentActivityName=".EditVerbActivity"
            />

        <activity
            android:name=".VerbListActivity"
            android:label="Verb List"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".EditVerbActivity"
            android:parentActivityName=".VerbListActivity" >
        </activity>

    </application>

</manifest>
